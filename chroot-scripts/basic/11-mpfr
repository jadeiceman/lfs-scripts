name=mpfr
version=4.0.1
source=(http://www.mpfr.org/mpfr-4.0.1/mpfr-4.0.1.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr        \
            --disable-static     \
            --enable-thread-safe \
            --docdir=/usr/share/doc/mpfr-4.0.1
	make
	make html
	make install
	make install-html
}
