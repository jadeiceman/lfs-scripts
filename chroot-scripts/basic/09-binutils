name=binutils
version=2.31.1
source=(http://ftp.gnu.org/gnu/binutils/binutils-2.31.1.tar.xz)

build() {
	cd $name-$version
	mkdir build
	cd build
	../configure --prefix=/usr       \
             --enable-gold       \
             --enable-ld=default \
             --enable-plugins    \
             --enable-shared     \
             --disable-werror    \
             --enable-64-bit-bfd \
             --with-system-zlib
	make tooldir=/usr
	make tooldir=/usr install
}
