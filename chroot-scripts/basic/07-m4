name=m4
version=1.4.18
source=(http://ftp.gnu.org/gnu/m4/m4-1.4.18.tar.xz)

build() {
	cd $name-$version

	# fixes required by glibc-2.28
        sed -i 's/IO_ftrylockfile/IO_EOF_SEEN/' lib/*.c
        echo "#define _IO_IN_BACKUP 0x100" >> lib/stdio-impl.h

	./configure --prefix=/usr
	make
	make install
}
