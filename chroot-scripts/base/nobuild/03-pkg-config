name=pkg-config
version=0.29.2
source=(https://pkg-config.freedesktop.org/releases/pkg-config-0.29.2.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
            --with-internal-glib       \
            --disable-host-tool        \
            --docdir=/usr/share/doc/pkg-config-0.29.2
	make
	make install
}
